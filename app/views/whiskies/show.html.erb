<p id="notice"><%= notice %></p>

<div class="large-3 small-12 column">
  <%=image_tag @whisky.pic %>
</div>

<div class="large-9 small-12 column">
  <h3>
    <%= @whisky.name %>
    (<%= @whisky.old %> Jahre)
  </h3>
  <p class="label whisky-label radius mb1">â‚¬ <%= @whisky.price %></p>
  <%if signed_in?%>
      <%=link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@whisky), removeUrl: remove_from_cart_path(@whisky)} do%>
          <i class="fi-shopping-cart"></i>
          <span><%=@cart_action%></span> Einkaufswagen
      <%end%>
  <%end%>
  <p>Herkunft: <%= @whisky.land %></p>
  <p>Inhalt: <%= @whisky.liter %>L</p>
  <p>Umdrehungen: <%= @whisky.volume %> %</p>
  <p>Beschreibung: <%= @whisky.description %></p>
</div>

<div class="row">
  <br>
  <div class="small-2 large-4 columns">
    <% if current_user %>
        Geschmack: <%= rating_for @whisky, "geschmack", disable_after_rate: false, target: '#hintDiv' %>
        <div id="hintDiv"></div>
        <br>
        Geruch: <%= rating_for @whisky, "geruch", disable_after_rate: false, target: '#hintDiv1' %>
        <div id="hintDiv1"></div>
        <br>
        Flaschendesign: <%= rating_for @whisky, "flaschendesign", disable_after_rate: false, target: '#hintDiv2' %>
        <div id="hintDiv2"></div>
        <br>
        Preis/Leistung: <%= rating_for @whisky, "preisleistung", disable_after_rate: false, target: '#hintDiv3' %>
        <div id="hintDiv3"></div>
    <% end %>
  </div>
</div>

